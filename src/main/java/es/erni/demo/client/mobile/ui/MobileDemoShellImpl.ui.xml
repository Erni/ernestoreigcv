<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	  .title {
      position: absolute;
      left: 5%;
      top: 30%;
      font-size: 3em;
      color: #680000;
      font-weight: bold;
      letter-spacing: 2px;
    }
    .navigBarPanel {
      /* gwt-image: 'mainmenu'; */
      background-position: center center;
      height: 100%;
      width: 100%;
      border: 0px solid gray;
    }
    /* @sprite .mainPanel { */
    .mainPanel {
      /* gwt-image: 'maincontent'; */
      background-position: center center;
      height: 100%;
      width: 100%;
      border: 0px solid gray;
    }
    .hMasterPanel {
      /* gwt-image: 'masterh'; */
      background-position: center center;
      height: 100%;
      width: 100%;
      border: 0px solid gray;
    }
    .sidePanel {
      /* gwt-image: 'masterh'; */
      background-position: center center;
      height: 100%;
      width: 100%;
      border: 0px solid gray;
    }
    .home {
      height: 100%;
      width: 100%;
      font-size: 400%;
      text-align: center;
      color: #ffffff;
      background: #606060;
      text-shadow:4px 4px 8px #B8B8B8;
    }
	</ui:style>
	
	<g:LayoutPanel>
    <g:layer>
      <g:SimplePanel ui:field="navigBarPanel" addStyleNames="{style.navigBarPanel}" >
        <g:Button ui:field="home" addStyleNames="{style.home}"> Main Menu</g:Button>
      </g:SimplePanel>
    </g:layer>
    <g:layer>
      <g:SimplePanel ui:field="horizontalMasterPanel" addStyleNames="{style.hMasterPanel}"/>
    </g:layer>
    <g:layer>
      <g:SimplePanel ui:field="sidePanel" addStyleNames="{style.sidePanel}"/>
    </g:layer>
    <g:layer>
      <g:SimplePanel ui:field="mainPanel" addStyleNames="{style.mainPanel}"/>
    </g:layer>
	</g:LayoutPanel>
</ui:UiBinder> 