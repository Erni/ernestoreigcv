<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	
 <ui:style>
  .text {
    font-family:arial, helvetica;
    font-size: 1.2em;
    text-align: justify;
  }
  .ov_table {
    border: 0.5px solid #A0A0A0;
    background-color: #E0E0E0;
    width: 90%;
    position: absolute;
    left: 5%;
    top: 2%;
    -moz-border-radius: 0.5em;
    padding: 10px;
  }
  .panel {
    background-color: #E0E0E0;
  }
  .section_header {
    font-family: “MS Sans Serif”;
    text-align: left;
    font-size: 2em;
    color: #680000;
  }
  .header {
  	text-align: left;
  	color: #680000;
  	font-size: 1.2em;
  }
  </ui:style>
  
  <ui:with field='res' type='es.erni.demo.client.style.Styles.Resources' />
  
  <g:HTMLPanel styleName="{style.panel}">
    
    <table class='{style.ov_table}'>
      <tr>
        <th class='{style.header}'>Polytechnic University of Valencia, Spain</th>
      </tr>
      <tr>
        <td class="{style.text}">
          <ul>
            <li><g:Image resource="{res.medium24}" /> Master´s Degree in Software Engineering, September 2008</li>
            <li><g:Image resource="{res.low24}" /> Bachelor´s Degree in Information Systems Engineering, September 2005</li>
          </ul>
        </td>
      </tr>
      <tr>
        <td>
          <g:DisclosurePanel ui:field="educationDiscPanel" >  
            <g:header>Relevant Coursework:</g:header>
            <g:HTMLPanel>
              <ul>
                <li>HL7 CDA R2 Pre-certification course,  April 2010</li>
                <li>UNE-EN 13606 Standard course, April 2009</li>
                <li>Implementation and installation of Linux CentOS Servers, January - March 2010</li>
                <li>Semantic Interoperability in Public Health, July 2008 (<b>Complutense University of Madrid</b>, Spain)</li>
              </ul>
            </g:HTMLPanel>
          </g:DisclosurePanel>
        </td>
      </tr>
    </table>

  </g:HTMLPanel>

</ui:UiBinder> 