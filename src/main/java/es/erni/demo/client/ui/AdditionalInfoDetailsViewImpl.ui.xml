<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:style>
  .text {
    font-family:arial, helvetica;
    font-size: 1.2em;
    text-align: justify;
  }
  .ov_table {
    border: 0.5px solid #A0A0A0;
    background-color: #E0E0E0;
    width: 72%;
    position: absolute;
    left: 14%;
    top: 2%;
    -moz-border-radius: 0.5em;
    padding: 10px;
  }
  .panel {
    background-color: #E0E0E0;
  }
  .section_header {
    font-family: “MS Sans Serif”;
    text-align: left;
    font-size: 2em;
    color: #680000;
  }
  </ui:style>
  
  <ui:with field='res' type='es.erni.demo.client.style.Styles.Resources' />
  
  <g:HTMLPanel styleName="{style.panel}">
    
    <table class='{style.ov_table}'>
      <tr>
        <td class="{style.text}">
          <b><g:Image resource="{res.world24}" /> Languages:</b>
          <ul>
            <li>Spanish (mother tongue)</li>
            <li>English:</li>
              <ul>
                <li>Cambridge First Certificate in English in 2009</li>
